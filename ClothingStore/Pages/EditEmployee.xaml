<Page x:Class="ClothingStore.Pages.EditEmployee"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClothingStore.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditEmployee">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <DataGrid Name="DG1"/>
        <Button x:Name="btnBack" Grid.Row="1" Width="100" Height="50" 
                Content="Назад" FontSize="25" Click="btnBack_Click" HorizontalAlignment="Center"/>
        <Button x:Name="btnAddUser" Margin="0 0 140 0" Grid.Row="1" Width="120" Height="50" 
                Content="Добавить клиента" FontSize="25"  HorizontalAlignment="Right" Click="btnAddUser_Click"/>
        <Button x:Name="btnEditUser" Grid.Row="1" Width="130" Height="50" 
                Content="Изменить" FontSize="25"  HorizontalAlignment="Right" Click="btnEditUser_Click"/>
    </Grid>
</Page>
